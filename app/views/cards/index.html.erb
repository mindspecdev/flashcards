<h1 class="page-header">Все карточки</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Original Text</th>
      <th>Translated Text</th>
      <th>Review Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
    <tr>
      <th scope="row"><%= card.id %></th>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
      <td><%= link_to 'Просмотреть', card_path(card) %> <%= link_to 'Редактировать', edit_card_path(card) %> <%= link_to 'Удалить', card, method: :delete, data: { confirm: "Вы уверены?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>